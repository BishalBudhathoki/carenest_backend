{
  "id": null,
  "title": "Invoice System - Client Analytics & Business Intelligence",
  "tags": ["invoice", "client", "analytics", "business-intelligence"],
  "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Client Count",
        "type": "table",
        "targets": [
          {
            "expr": "invoice_clients_total",
            "legendFormat": "Total Clients"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Assignments",
        "type": "piechart",
        "targets": [
          {
            "expr": "invoice_assignments_active",
            "legendFormat": "Active Assignments"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "System Overview Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "invoice_clients_total",
            "legendFormat": "Total Clients"
          },
          {
            "expr": "invoice_users_total",
            "legendFormat": "Total Users"
          },
          {
            "expr": "invoice_organizations_total",
            "legendFormat": "Total Organizations"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Assignment & Invoice Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "invoice_assignments_total",
            "legendFormat": "Total Assignments"
          },
          {
            "expr": "invoice_invoices_recent",
            "legendFormat": "Recent Invoices"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Active Assignment Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "(invoice_assignments_active / invoice_assignments_total) * 100",
            "legendFormat": "Active Assignment Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Recent Invoices",
        "type": "stat",
        "targets": [
          {
            "expr": "invoice_invoices_recent",
            "legendFormat": "Recent Invoices Count"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 7,
        "title": "Organization & User Metrics",
        "type": "histogram",
        "targets": [
          {
            "expr": "invoice_organizations_total",
            "legendFormat": "Total Organizations"
          },
          {
            "expr": "invoice_users_total",
            "legendFormat": "Total Users"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      },
      {
        "id": 8,
        "title": "Assignment Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "invoice_assignments_total",
            "legendFormat": "Total Assignments"
          },
          {
            "expr": "invoice_assignments_active",
            "legendFormat": "Active Assignments"
          },
          {
            "expr": "invoice_invoices_recent",

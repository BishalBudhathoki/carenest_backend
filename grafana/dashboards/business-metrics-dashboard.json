{
  "id": null,
  "title": "Invoice System - Business Metrics Dashboard",
  "tags": ["invoice", "business", "metrics"],
  "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Recent Invoices Count",
        "type": "stat",
        "targets": [
          {
            "expr": "invoice_invoices_recent",
            "legendFormat": "Recent Invoices"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "System Overview",
        "type": "timeseries",
        "targets": [
          {
            "expr": "invoice_organizations_total",
            "legendFormat": "Total Organizations"
          },
          {
            "expr": "invoice_users_total",
            "legendFormat": "Total Users"
          },
          {
            "expr": "invoice_clients_total",
            "legendFormat": "Total Clients"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Assignment Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "(invoice_assignments_active / invoice_assignments_total) * 100",
            "legendFormat": "Active Assignment Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Assignment Analytics",
        "type": "piechart",
        "targets": [
          {
            "expr": "invoice_assignments_total",
            "legendFormat": "Total Assignments"
          },
          {
            "expr": "invoice_assignments_active",
            "legendFormat": "Active Assignments"
          },
          {
            "expr": "invoice_invoices_recent",
            "legendFormat": "Recent Invoices"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8}
      },
      {
        "id": 5,
        "title": "Client & User Overview",
        "type": "timeseries",
        "targets": [
          {
            "expr": "invoice_clients_total",
            "legendFormat": "Total Clients"
          },
          {
            "expr": "invoice_users_total",
            "legendFormat": "Total Users"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8}
      },
      {
        "id": 6,
        "title": "Organization & Invoice Metrics",
        "type": "histogram",
        "targets": [
          {
            "expr": "invoice_organizations_total",
            "legendFormat": "Total Organizations"
          },
          {
            "expr": "invoice_invoices_recent",
            "legendFormat": "Recent Invoices"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Assignment Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "invoice_assignments_active",
            "legendFormat": "Active Assignments"
          },
          {
            "expr": "invoice_assignments_total",
            "legendFormat": "Total Assignments"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
{
  "name": "multi-tenant-invoice-backend",
  "version": "1.0.0",
  "description": "Multi-tenant invoice management backend with organization support",
  "main": "server.js",
  "scripts": {
    "start": "exec node server.js",
    "start:dev": "cp .env.development .env && nodemon server.js",
    "start:prod": "cp .env.production .env && NODE_ENV=production node server.js",
    "dev": "cp .env.development .env && NODE_ENV=development nodemon server.js",
    "prod": "cp .env.production .env && NODE_ENV=production node server.js",
    "test": "jest",
    "health-check": "curl $BACKEND_URL/health || curl $PRODUCTION_URL/health || echo 'Server not responding'",
    "health-check:local": "curl http://localhost:8080/health || echo 'Local server not responding'"
  },
  "keywords": [
    "invoice",
    "multi-tenant",
    "organization",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "argon2": "^0.44.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "serverless-http": "^3.2.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "clearMocks": true
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
